# Scraper Python Environment Configuration

# Ambiente
ENVIRONMENT=development

# API do Scraper
SCRAPER_API_HOST=127.0.0.1
SCRAPER_API_PORT=8000

# Banco de Dados (mesmo do backend Node.js)
DATABASE_PATH=../data/briefflow.db

# API do BriefFlow (backend Node.js)
BRIEFFLOW_API_URL=http://localhost:5001
BRIEFFLOW_API_KEY=

# YouTube API (opcional)
YOUTUBE_API_KEY=

# User-Agent para requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Configurações de scraping
REQUEST_DELAY=1.0
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CONTENT_MIN_LENGTH=100
CONTENT_MAX_LENGTH=50000

# ==================== APIs ====================

# OpenAI API (para AI Agent) - OBRIGATÓRIO
# Usada automaticamente no scraper: openai_agent_scraper.py
OPENAI_API_KEY=sk-proj-sua-chave-aqui
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Firecrawl API (para Search, Map e Crawl)
# Usada automaticamente nos scrapers: search_scraper.py, site_mapper.py, web_crawler.py
FIRECRAWL_API_KEY=sua-chave-firecrawl
FIRECRAWL_API_URL=https://api.firecrawl.dev/v1

# Configurações de search e crawl
MAX_SEARCH_RESULTS=50
MAX_MAP_URLS=100
MAX_CRAWL_PAGES=100
